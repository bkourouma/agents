# AI Agent Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true
PORT=3006
HOST=0.0.0.0
WORKERS=2

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL (Production)
DATABASE_URL=postgresql://ai_agents_user:your_password@localhost:5432/ai_agents_db
POSTGRES_DB=ai_agents_db
POSTGRES_USER=ai_agents_user
POSTGRES_PASSWORD=your_secure_password

# SQLite (Development fallback)
# DATABASE_URL=sqlite:///./ai_agent_platform.db

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# ===========================================
# AI SERVICE API KEYS (REQUIRED)
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===========================================
# SECURITY CONFIGURATION (REQUIRED)
# ===========================================
# Generate strong random keys (32+ characters)
SECRET_KEY=your-super-secret-key-at-least-32-characters-long-change-this
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters-long-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================================
# APPLICATION URLS
# ===========================================
FRONTEND_URL=http://localhost:3003
BACKEND_URL=http://localhost:3006

# Frontend build-time environment variables
FRONTEND_API_URL=http://localhost:3006/api
FRONTEND_WS_URL=ws://localhost:3006/ws

# ===========================================
# AZURE SERVICES (OPTIONAL)
# ===========================================
# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Application Insights
AZURE_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# ===========================================
# WHATSAPP INTEGRATION (OPTIONAL)
# ===========================================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ===========================================
# VANNA AI CONFIGURATION
# ===========================================
VANNA_MODEL_NAME=gpt-4o
VANNA_CHROMA_PATH=./vanna_chromadb
VANNA_DEBUG=false

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to true for development
RELOAD=true
CORS_ORIGINS=["http://localhost:3003", "http://127.0.0.1:3003"]

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Vector database settings
CHROMA_PERSIST_DIRECTORY=./agent_vectors
CHROMA_COLLECTION_NAME=ai_agents

# Vanna AI cache settings
VANNA_CACHE_DIR=./vanna_cache

# File upload limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["pdf", "txt", "docx", "xlsx", "csv"]

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
