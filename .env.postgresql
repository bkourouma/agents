# PostgreSQL Configuration for AI Agent Platform
# Copy this to .env and update with your PostgreSQL credentials

# Application Configuration
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=3006
API_PREFIX=/api/v1

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# PostgreSQL Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_agent_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Multi-Tenant Configuration
DEFAULT_TENANT_SLUG=default
ENABLE_TENANT_ISOLATION=true
ENABLE_ROW_LEVEL_SECURITY=true

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Azure Blob Storage (Optional - for file storage)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=agent-files

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai

# Vanna AI Configuration (Enhanced for PostgreSQL)
VANNA_MODEL_NAME=gpt-4
VANNA_CHROMA_PATH=./vanna_chromadb
VANNA_DEBUG=false
VANNA_ENABLE_TENANT_ISOLATION=true

# Knowledge Base Configuration
KNOWLEDGE_BASE_STORAGE_PATH=./agent_documents
KNOWLEDGE_BASE_VECTOR_PATH=./agent_vectors
ENABLE_SEMANTIC_SEARCH=true
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,csv,xlsx
UPLOAD_STORAGE_PATH=./uploads

# Monitoring and Logging
LOG_LEVEL=INFO
AZURE_INSIGHTS_KEY=your-application-insights-key
ENABLE_PERFORMANCE_MONITORING=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:3003","http://localhost:5173","http://localhost:3000"]

# Development Settings
ENABLE_API_DOCS=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_METRICS_ENDPOINT=true

# PostgreSQL Specific Settings
PG_STATEMENT_TIMEOUT=30000
PG_LOCK_TIMEOUT=10000
PG_IDLE_IN_TRANSACTION_SESSION_TIMEOUT=60000

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups
